{
  "version": 8,
  "name": "Custom",
  "metadata": {
    "mapbox:autocomposite": true
  },
  "sources": {
    "composite": {
      "type": "vector",      
      "tiles": [
        "<your-app-base-url>/data/tiles/andorra/{z}/{x}/{y}.pbf"
      ],
      "minzoom": 0,
      "maxzoom": 15
    }
  },
 "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#e3decb"
      }
    },
  {
            "interactive": true,
            "layout": {
                "line-cap": "butt",
                "line-join": "miter"
            },
            "filter": [
                "all",
                [
                    "==",
                    "$type",
                    "LineString"
                ],
                [
                    "all",
                    [
                        "in",
                        "highway",
                        "motorway",
                        "motorway_link",
                        "primary",
                        "primary_link ",
                        "secondary",
                        "secondary_link ",
                        "residential",
                        "tertiary",
                        "tertiary_link ",
                        "trunk",
                        "trunk_link",
                        "street",
                        "street_limited",
                        "service",
                        "track",
                        "pedestrian",
                        "path",
                        "link"
                    ]
                ]
            ],
            "type": "line",
            "source": "composite",
            "id": "tunnel_minor",
            "paint": {
                "line-color": "#efefef",
                "line-width": {
                    "base": 1.55,
                    "stops": [
                        [
                            4,
                            0.25
                        ],
                        [
                            20,
                            30
                        ]
                    ]
                }
            },
            "source-layer": "andorra"
        },
    {
      "id": "Road",
      "type": "line",
      "source": "composite",
      "source-layer": "andorra",
      "paint": {
        "line-color": "#0000FF",
        "line-width": 2
      },
      "filter": [
        "==",
        "osm_id",
        "124673943"
      ]
    }
  ]
}